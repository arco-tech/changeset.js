{
  "name": "@arco-tech/changeset",
  "version": "0.1.1",
  "description": "Keep track of changes and validation errors",
  "main": "lib/changeset.js",
  "types": "lib/changeset.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arco-tech/changeset.js.git"
  },
  "keywords": [
    "changeset",
    "data",
    "validation"
  ],
  "author": "Arco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arco-tech/changeset.js/issues"
  },
  "homepage": "https://github.com/arco-tech/changeset.js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  },
  "files": [
    "lib/**/*"
  ]
}
